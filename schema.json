{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "inspector": {
            "type": "object",
            "properties": {
                "region": { "type": "string" }
            },
            "required": ["region"]
        },
        "metrics_db": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "influxdb": {
                        "type": "object",
                        "properties": {
                            "database_url": { "type": "string" },
                            "port": { "type": "integer" },
                            "database_name": { "type": "string" },
                            "transport_protocol": { "type": "string" }
                        },
                        "required": ["database_url", "port", "database_name"]
                    },
                    "mysqldb": {
                        "type": "object",
                        "properties": {
                            "database_url": { "type": "string" },
                            "port": { "type": "integer" },
                            "database_name": { "type": "string" }
                        },
                        "required": ["database_url", "port", "database_name"]
                    }
                }
            }
        },
        "targets": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": { "type": "string" },
                    "name": { "type": "string" },
                    "probers": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": { "type": "string" },
                                "name": { "type": "string" },
                                "context": {
                                    "type": "object",
                                    "properties": {
                                        "url": { "type": "string" },
                                        "method": { "type": "string" },
                                        "parameters": {
                                            "type": "object",
                                            "additionalProperties": { "type": "string" }
                                        },
                                        "cookies": {
                                            "type": "object",
                                            "additionalProperties": { "type": "string" }
                                        },
                                        "allow_redirects": { "type": "boolean" },
                                        "timeout": { "type": "string" }
                                    },
                                    "required": ["url", "method"]
                                }
                            },
                            "required": ["id", "name", "context"]
                        }
                    }
                },
                "required": ["id", "name", "probers"]
            }
        }
    },
    "required": ["inspector", "metrics_db", "targets"]
}


